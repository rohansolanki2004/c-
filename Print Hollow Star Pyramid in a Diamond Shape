#include<iostream>
using namespace std;
void diamond()
{
	
	int i,j,rows=5;
	for(i=1;i<=rows;i++)
	{
		for(j=1;j<=rows-i;j++)
		{
			cout<<" ";
		}
		for(int k=1;k<=2*i-1;k++)
		{
			if(k==1||k==2*i-1)
			cout<<"*";
			else
			cout<<" ";
		}
		cout<<endl;
	}
	//reverse same
	for(i=rows-1;i>=0;i--)
	{
		for(j=1;j<=rows-i;j++)
		{
			cout<<" ";
		}
		for(int k=2*i-2;k>=0;k--)
		{
			if(k==0||k==2*i-2)
			cout<<"*";
			else
			cout<<" ";
		}
		cout<<endl;
	}
}
int main()
{
	diamond();
	return 0;
}
