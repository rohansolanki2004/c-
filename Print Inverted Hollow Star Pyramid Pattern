#include<iostream>
using namespace std;
void inverted_hollow_star_pyramid()
{
	int i,j,rows=10;
	int n=rows;
	for(i=1;i<=rows;i++)
	{
		for(j=1;j<=i-1;j++)
		{
			cout<<" ";
		}
		for(int k=1;k<=2*n-1;k++)
		{
			if(k==1||k==2*n-1||i==1)
			cout<<"*";
			else
			cout<<" ";
		}
			n--;
		cout<<endl;
	}
}
int main()
{
	inverted_hollow_star_pyramid();
}
